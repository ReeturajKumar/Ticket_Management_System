{
  "API_DOCUMENTATION": "Student Ticketing System",
  "BASE_URL": "http://localhost:5000/api/v1",
  "AUTHENTICATION_APIS": {
    "Register API": "http://localhost:5000/api/v1/auth/register",
    "Register Description": "Step 1: Register user and send OTP to email. User is NOT created until OTP is verified.",
    "Register Request": {
      "name": "John Doe",
      "email": "john@example.com",
      "password": "password123"
    },
    "Register Response": {
      "success": true,
      "message": "Verification OTP sent to your email. Please check your inbox.",
      "data": {
        "email": "john@example.com",
        "otpExpiresIn": "2 minutes"
      }
    },
    "Verify OTP API": "http://localhost:5000/api/v1/auth/verify-otp",
    "Verify OTP Request": {
      "email": "john@example.com",
      "otp": "1234"
    },
    "Verify OTP Response": {
      "success": true,
      "message": "Email verified successfully! You are now registered.",
      "data": {
        "user": {
          "id": "65f1a2b3c4d5e6f7g8h9i0j1",
          "name": "John Doe",
          "email": "john@example.com",
          "role": "STUDENT"
        },
        "accessToken": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...",
        "refreshToken": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
      }
    },
    "Resend OTP API": "http://localhost:5000/api/v1/auth/resend-otp",
    "Resend OTP Request": {
      "email": "john@example.com"
    },
    "Resend OTP Response": {
      "success": true,
      "message": "New OTP sent to your email",
      "data": {
        "email": "john@example.com",
        "otpExpiresIn": "2 minutes"
      }
    },
    "Login API": "http://localhost:5000/api/v1/auth/login",
    "Login Description": "Login with verified email. Email must be verified before login.",
    "Login Request": {
      "email": "john@example.com",
      "password": "password123"
    },
    "Login Response": {
      "success": true,
      "message": "Login successful",
      "data": {
        "user": {
          "id": "65f1a2b3c4d5e6f7g8h9i0j1",
          "name": "John Doe",
          "email": "john@example.com",
          "role": "STUDENT"
        },
        "accessToken": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...",
        "refreshToken": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
      }
    },
    "Login Error (Unverified)": {
      "success": false,
      "message": "Please verify your email before logging in. Check your inbox for the OTP."
    },
    "Refresh Token API": "http://localhost:5000/api/v1/auth/refresh",
    "Refresh Token Description": "Get new access token using refresh token",
    "Refresh Token Request": {
      "refreshToken": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
    },
    "Refresh Token Response": {
      "success": true,
      "message": "Token refreshed successfully",
      "data": {
        "accessToken": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...",
        "refreshToken": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
      }
    },
    "Logout API": "http://localhost:5000/api/v1/auth/logout",
    "Logout Request": {
      "refreshToken": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
    },
    "Logout Response": {
      "success": true,
      "message": "Logged out successfully"
    },
    "Forgot Password API": "http://localhost:5000/api/v1/auth/forgot-password",
    "Forgot Password Description": "Send password reset link to email. For users who forgot their password.",
    "Forgot Password Request": {
      "email": "john@example.com"
    },
    "Forgot Password Response": {
      "success": true,
      "message": "Password reset link has been sent to your email"
    },
    "Forgot Password Note": "Check your email for reset link. Link expires in 1 hour.",
    "Reset Password API": "http://localhost:5000/api/v1/auth/reset-password",
    "Reset Password Description": "Reset password using token from email link.",
    "Reset Password Request": {
      "token": "abc123xyz789resettoken",
      "newPassword": "newpassword123"
    },
    "Reset Password Response": {
      "success": true,
      "message": "Password reset successful. You can now login with your new password."
    },
    "Reset Password Error (Invalid Token)": {
      "success": false,
      "message": "Invalid or expired reset token"
    }
  },
